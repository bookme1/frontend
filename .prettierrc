{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "react",
    "<THIRD_PARTY_MODULES>",
    "^./(.*)$",
    "^../(.*)$",
    "@serviceWorker/",
    "@pages/",
    "@router/",
    "@routes/",
    "@components/",
    "@myfirebase/",
    "@store/",
    "@api/",
    "@hooks/",
    "@utils/",
    "@interfaces/",
    "@enums/",
    "types/",
    "@constants/",
    "@assets/",
    "@i18n/"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "proseWrap": "always",
  "overrides": [
    {
      "files": "*.module.css",
      "options": {
        "parser": "css"
      }
    }
  ]
}
